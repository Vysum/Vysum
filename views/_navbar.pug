div.navbar.navbar-expand-lg.navbar-dark.bg-dark.text-light
    a.navbar-brand(href="/")
        img(src="/assets/logo-full.png", height="30px", width="auto", alt="")
    button.navbar-toggler(data-toggle="collapse", data-target="#mainMenu")
        span.navbar-toggler-icon
    div#mainMenu.collapse.navbar-collapse
        div.form-inline
            input#search.form-control.mr-auto.bg-dark.border-0(type="search", placeholder="Search...")
            button.btn.my-0.my-sm-0(type="submit")
                i.fas.fa-search(data-toggle="tooltip", data-placement="bottom", title="Search")
        ul.navbar-nav.ml-auto
            li.nav-item
                a.nav-link(href="/about")
                    i.fas.fa-bars.fa-lg(data-toggle="tooltip", data-placement="bottom", title="About Vysum")
            li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href="#", data-toggle="dropdown", role="button")
                    i.fas.fa-user-circle.fa-lg(data-toggle="tooltip",)
                div.dropdown-menu.dropdown-menu-right
                    a#menuLogin.dropdown-item(href="#")
                        i.fas.fa-sign-in
                        span  Login
                    a#menuLogout.dropdown-item.text-danger(href="#")
                        i.fas.fa-sign-out
                        span  Logout